
<img src="/<%=@product.brand_logo%>">
<h3><%= @product.name %></h3>
<p>Category: <%= @product.category %> Bike</p>
<p>Description: <%= @product.description %></p>
<p>Buy Cost: £<%= @product.buy_cost %></p>
<p>Sell Price: £<%= @product.sell_price %></p>
<p>Profit Margin: £<%= @product.profit_margin %></p>
<p>Quantity: <%= @product.quantity %> <%= @product.status %> </p>

<a href="/products/<%= @product.id %>/edit">Edit</a>

<form method ="post" action="/products/<%=@product.id %>/delete">
    <input type="submit" value=Delete Product" />
  </form>

<form method ="post" action="/products/<%=@product.id %>/buy">
    <input type="number" min=0 name="buy_amount">
    <input type="submit" value="Buy" />
  </form>

<% if @product.quantity > 0 %>
<form method ="post" action="/products/<%=@product.id %>/sell">
    <input type="number" max="<%= @product.quantity %>" min=0 name="sell_amount">
    <input type="submit" value="Sell" />
  </form>
  <% end %>
