<h1><%= @manufacturer.name %></h1>
<h2>Contact Details: <%= @manufacturer.contact_details %> </h2>

<p>Bikes:</p>
<ul>
  <% for product in @products %>
  <li><p>Name: <%= product.brand_name %> </p></li>
  <li><p>Description: <%= product.description %> </p></li>
  <li><p>Buy Cost: £<%= product.buy_cost %> </p></li>
  <li><p>Sell Price: £<%= product.sell_price %> </p></li>
  <li><p>Profit Margin: £<%= product.profit_margin %> </p></li>
  <li><p>Category: <%= product.category %> </p></li>
  <hr/>
  <% end %>
</ul>
